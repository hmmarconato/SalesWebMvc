@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<h4>Seller</h4>
<hr />  
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-control">
                <label asp-for="Seller.Name" class="form-label"></label>
                <input type="text" asp-for="Seller.Name" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Seller.Email" class="form-label"></label>
                <input type="email" asp-for="Seller.Email" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Seller.BirthDate" class="form-label"></label>
                <input type="date" asp-for="Seller.BirthDate" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Seller.BaseSalary" class="form-label"></label>
                <input type="number" asp-for="Seller.BaseSalary" class="form-control" />
            </div>
            <div class="form-control">
                <label asp-for="Seller.DepartmentId" class="form-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control">
                </select>
            </div>
            <div class="form-control">
                <input type="submit" value="Create" class="btn btn-sm" />
            </div>
        </form>
    </div>
</div>